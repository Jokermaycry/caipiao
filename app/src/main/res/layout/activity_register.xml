<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_grey"
    android:orientation="vertical">

   <RelativeLayout
       android:background="@color/theme_color1"
       android:layout_width="match_parent"
       android:layout_height="45dp">

       <TextView
           android:id="@+id/title"
           android:text="注册"
           android:textColor="@color/white"
           android:textSize="16sp"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:text="账号"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/regist_edit_mobile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请输入账号"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@color/white"
                android:textColorHint="#999999"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/comm_border"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/c2"
                    android:text="密码"/>
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/regist_edit_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请输入密码"
                    android:textSize="13sp"
                    android:textColor="@color/c2"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@color/white"
                    android:textColorHint="#999999"/>


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/comm_border"/>
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:text="确定密码"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/regist_edit_pwd_comfirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请输入密码"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@color/white"
                android:textColorHint="#999999"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/comm_border"/>
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:text="邀请码"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/invite_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="非必填"
                android:textSize="13sp"
                android:textColor="@color/c2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@color/white"
                android:textColorHint="#999999"/>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/register_btn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/btn_bg_blue_fill"
        android:textColor="@color/white"
        android:text="注册"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
