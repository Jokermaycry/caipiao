<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/theme_color1"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            android:text="开奖详情"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/refresh_listview"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent"
            android:divider="@color/comm_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="10dp"
            android:background="@color/comm_grey"
            >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_bg_blue_fill"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/buy_btn"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="?android:selectableItemBackground"
                android:text="投注"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
