<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/zero"/>
    <LinearLayout
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="36dp"
        android:paddingBottom="36dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qq"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/qiaoqiaohua_qq"
            android:text="QQ"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/weixin"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/qiaoqiaohua_weixin"
            android:text="微信"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pengyouquan"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/qiaoqiaohua_penyouquan"
            android:text="朋友圈"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kongjian"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/qiaoqiaohua_qzone"
            android:text="QQ空间"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/cancel"
        android:background="@drawable/white_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="取 消"
        android:gravity="center"
        android:textColor="#323232"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>
