<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:background="@drawable/wdsb_icon"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:paddingLeft="17dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/equipment_name"
                android:layout_width="wrap_content"
                android:textColor="#323232"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/equipment_number"
                android:textColor="#999999"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/item_equipment_img"
            android:layout_width="15dp"
            android:background="@drawable/right_my_equip_into"
            android:layout_height="25dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/main_select_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/LineStyle_1px_f4f4f4" />
</LinearLayout>
