<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ailide.apartmentsabc.views.friendchat.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_include_back"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/zuo_back"/>
        <LinearLayout
            android:id="@+id/friend_search"
            android:layout_width="@dimen/zero"
            android:layout_marginLeft="20dp"
            android:background="@drawable/f2f2f2_bg_8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="34dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_seach"
                android:layout_height="14dp" />
            <EditText
                android:id="@+id/edit"
                android:layout_width="@dimen/zero"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索好友熊号"
                android:inputType="number"
                android:textSize="14sp"
                android:textColor="#c6c5c5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/friend_add"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="查找"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        style="@style/LineStyle_1px_f4f4f4" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
