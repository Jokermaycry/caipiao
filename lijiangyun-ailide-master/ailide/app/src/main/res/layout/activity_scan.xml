<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    tools:context=".apartmentsabc.views.addequitment.ScanActivity">
    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:layout_centerInParent="true"
        android:id="@+id/zxingview"
        app:qrcv_animTime="1000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_barcodeRectHeight="225dp"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="#f97808"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="1dp"
        app:qrcv_customScanLineDrawable="@drawable/scan_icon_line"
        app:qrcv_isBarcode="false"
        app:qrcv_isCenterVertical="false"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_rectWidth="225dp"
        app:qrcv_scanLineColor="#f97808"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_toolbarHeight="175dp"
        app:qrcv_topOffset="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_include_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/design_30px"
            android:paddingRight="@dimen/design_30px"
            android:src="@drawable/zuo_back"/>

        <TextView
            android:id="@+id/tv_include_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_include_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_include_right"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="123"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </RelativeLayout>
</RelativeLayout>
